{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "common-lib": ["common-lib/src/index.ts"],
      "common-lib/*": ["common-lib/src/*"],
      "@resume/services/*": ["services/shared/src/*"]
    }
  }
}
